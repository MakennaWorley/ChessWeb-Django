{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "baseUrl": "./static",
    "paths": {
      "*": ["*"]
    },

    "allowJs": true,
    "checkJs": true,

    "outDir": "./dist",
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}